[logging]
debug_file = /var/log/mopidy/mopidy-debug.log

[local]
library = images
enabled = true
data_dir = /opt/data
media_dir = /opt/music
playlists_dir = /opt/playlists
scan_timeout = 2000
scan_flush_threshold = 100

[local-images]
library = sqlite

[audio]
#output = autoaudiosink
output = audioresample ! audioconvert ! audio/x-raw,rate=48000,channels=2,format=S16LE ! wavenc ! filesink location=/tmp/{{or (getenv "HOSTNAME") "default"}}

[mpd]
hostname = 0.0.0.0

[http]
enabled = true
hostname = 0.0.0.0
port = 6680
zeroconf = Mopidy HTTP server on $hostname

[stream]
enabled = true
protocols =
    http
    https
    mms
    rtmp
    rtmps
    rtsp
